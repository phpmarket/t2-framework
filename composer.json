{
  "name": "phpmarket/t2-framework",
  "type": "project",
  "keywords": [
    "high performance",
    "http service"
  ],
  "homepage": "https://www.t2engine.cn",
  "license": "MIT",
  "description": "A high-performance HTTP service framework ported from webman.",
  "authors": [
    {
      "name": "Tony",
      "email": "support@t2engine.cn",
      "homepage": "https://www.t2engine.cn",
      "role": "Developer"
    }
  ],
  "support": {
    "email": "support@t2engine.cn",
    "issues": "https://github.com/phpmarket/t2-engine/issues",
    "forum": "https://forum.t2engine.cn/",
    "wiki": "https://wiki.t2engine.cn/",
    "source": "https://github.com/phpmarket/t2-framework"
  },
  "require": {
    "php": ">=8.1",
    "workerman/workerman": "^5.1",
    "nikic/fast-route": "^1.3",
    "psr/container": ">=1.0"
  },
  "suggest": {
    "ext-event": "For better performance. "
  },
  "autoload": {
    "psr-4": {
      "T2\\": "./src",
      "App\\": "./src/App"
    },
    "files": [
      "./src/App/helpers.php"
    ]
  },
  "scripts": {
    "pre-install-cmd": [
      "echo 'Before installing T2 Framework...'",
      "App\\Installer::install"
    ],
    "post-install-cmd": [
      "echo 'After installing T2 Framework...'",
      "App\\Installer::install"
    ],
    "post-package-install": [
      "echo 'Package installed.'",
      "App\\Installer::install"
    ]
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
